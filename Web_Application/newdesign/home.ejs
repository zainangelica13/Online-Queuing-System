			<script src="calendar/pikaday.js"></script>
			<script>
				var someDate = new Date(); 
				someDate.setDate(someDate.getDate() + 6)
				var picker = new Pikaday(
				{
					field: document.getElementById('datepicker'),
					changeMonth: true,
					dateFormat: "dd-mm-yy",
					firstDay: 0,
					minDate: new Date(),
					maxDate: someDate,
					disableWeekends: true,
					yearRange: [2000,2020]
				});
				
			</script>
	</body>
		 <script type="text/javascript">
			$(document).ready(function() {
			var allow = false;
			
			$("#nav-logout").click(function(e) {
				  e.preventDefault()
					swal({
						title : "",
						text : "Would you like to log out from the system?",
						type : "warning",
						showCancelButton: true,
						confirmButtonText: "Yes",
				   },
					function(isConfirm){
					  if (isConfirm) {
						  $.ajax({
							type: 'post',
							url: 'http://localhost:3000/logout/',
							dataType: 'json',
							data: formData
							})
							.done(function(data) {
									allow = data.allow;
									$('#login').click();
							})
							.fail(function(jqXHR, textStatus, err) {
								swal ( "Oops" ,  "Error" ,  "error" )
								console.log('Error');
							});
					  } else {
							alert("Cancelled");
					  }
						})
			});

			$('#reserve').click(function(e){
				if(allow == false) {
					e.preventDefault();			
					var formData = {
						dte : $('#datepicker').val(),
						tab : $('#coun option:selected').val();,
						validator : allow
					};
					if ($('#datepicker').val() == '' || $('#coun').val() == '') {
						swal ( "Oops" ,  "Please choose your date and your counter!" ,  "warning" )
					} else {						
						$.ajax({
							type: 'post',
							url: 'http://localhost:3000/slot/',
							dataType: 'json',
							data: formData
						})
						.done(function(data) {
							if (data.allow == false) {
								swal ( "Oops" ,  data.msg ,  "warning" )
							} else {
								allow = data.allow;
								$('#login').click();
							}
						})
						.fail(function(jqXHR, textStatus, err) {
							swal ( "Oops" ,  "Error" ,  "error" )
							console.log('Error');
						});
					}
				}
			});

		});

			</script>
